rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is an admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // User Rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if isAdmin() || (
        request.auth != null && request.auth.uid == userId 
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['coins', 'totalEarned', 'isAdmin'])
      );
      allow delete: if isAdmin();
    }
    
    // Tasks Rules
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Task Submissions
    match /taskSubmissions/{submissionId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write, delete: if isAdmin();
    }

    // Withdrawals
    match /withdrawals/{withdrawalId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (request.auth != null && (resource.data.userId == request.auth.uid));
      allow update, delete: if isAdmin();
    }

    // Card Games
    match /cardGames/{gameId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Card Game Entries
    match /cardGameEntries/{entryId} {
      // Allow read if user is admin OR if the logged in user is the owner
      // We check request.auth.uid since entryId usually contains it, 
      // but checking the stored userId field is more reliable.
      allow read: if isAdmin() || (request.auth != null && (resource == null || resource.data.userId == request.auth.uid));
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // Contact Messages
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
